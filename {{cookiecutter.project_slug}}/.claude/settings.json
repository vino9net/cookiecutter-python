{
  "permissions": {
    "allow": [
      "Bash(uv add:*)",
      "Bash(uv sync:*)",
      "Bash(uv tree:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(python -m pytest -v:*)",
      "Bash(python:*)",
      "WebFetch(domain:*)",
      "Bash(ruff check:*)",
      "Bash(ruff format:*)",
      "Bash(pytest:*)",
      "Bash(git add:*)",
      "Bash(git log:*)"
